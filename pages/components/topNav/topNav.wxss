
.not-scroll{
    display:flex;
    align:center;
    justify-content:space-around;
}

.top-nav-item{
    position:relative;


    padding:30rpx 0;
    font-size:26rpx;
}

.line-bottom{
    position:absolute;
    left:0;
    bottom:0;
    width:100%;

    height:4rpx;
    background-color:red;
}

.scroll{
    white-space:nowrap;
    font-size:0;
}

.scroll .top-nav-item{
    display:inline-block;
    margin-right:40rpx;
    padding:0 30rpx;
}

.top-nav-content{
    position:relative;
}



