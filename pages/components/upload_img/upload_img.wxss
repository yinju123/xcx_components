
.clear:after{
    display:block;
    content:'';
    clear:both;
}

.upload_img_item{
    display:flex;
    align-items:center;
    position:relative;
    float:left;
}

.upload_img__item_content{
    width:100%;
}

.icon_box{
    margin:0 auto;
}

.text_box{
    text-align:center;
}

.delete{
    position:absolute;
}

.local_img{
    position:absolute;
    top:0;
    left:0;
    width:100%;
    height:100%;
}



